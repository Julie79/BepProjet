                    <li><a href="#drink">Boisson</a></li>
                </ul>
            </nav>
        </div>
        <div class="col-md-9 section-boutique">
        
            <!-- Menu Category / Menus -->
            <div id="Menus" class="menu-category">
                <div id="category-menu" class="menu-category-title">
                    <div class="bg-image"><img src="{{ asset('assets/img/menu.jpg') }}" alt=""></div>
                </div>
                <div class="menu-category-content padded">
                    <div class="row gutters-sm">
                        
                    
                           
                                
                        <div class="col-lg-6 col-6">
                            <!-- Menu Item -->
                            <div class="menu-item menu-grid-item">
                                
                                
                                    
                                <a href="{{ path('menu_details', {menuName : 'Bobun'}) }}"><img class="mb-4 imgEngagements" src="{{ asset('assets/img/bobun1.jpg') }}"  alt=""></a>
