                <div class="row" >
                    <div class="col-md-12">
                        <h4 class="text-center">{{ event.title }}</h4>
                    </div>
                    <div class="col-md-4">
                        <img src="{{ asset('assets/img/about1.jpg') }}" alt="">
                    </div>
                    <div class="col-md-8">
                        <span>{{ event.description }}</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
   

    <!-- Section - Engagements -->
